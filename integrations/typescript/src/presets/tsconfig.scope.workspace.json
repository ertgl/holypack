{
  "extends": "./tsconfig.partial.base.json",
  "compilerOptions": {
    "baseUrl": "${configDir}",
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "${configDir}"
  },
  "include": [
    "${configDir}/**/*"
  ],
  "exclude": [
    "${configDir}/.git/**/*",
    "${configDir}/.yarn/**/*",
    "${configDir}/node_modules/**/*"
  ]
}
