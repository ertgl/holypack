{
  "name": "@holypack/integration-eslint",
  "keywords": [
    "holypack",
    "holypack-integration"
  ],
  "scripts": {
    "build": "yarn clean && yarn babel:build::cjs && yarn babel:build::esm && yarn tsc:build::types",
    "clean": "rm -fr dist",
    "cmd:eslint": "cd $INIT_CWD && eslint --config ./eslint.config.mjs",
    "eslint:lint": "cd $PROJECT_CWD && yarn cmd:eslint",
    "eslint:lint::fix": "cd $PROJECT_CWD  && yarn cmd:eslint --fix"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "@cspell/dict-bash": "^4.2.0",
    "@cspell/dict-css": "^4.0.17",
    "@cspell/dict-en-common-misspellings": "^2.0.10",
    "@cspell/dict-en-gb": "^4.1.64",
    "@cspell/dict-en_us": "^4.4.1",
    "@cspell/dict-filetypes": "^3.0.11",
    "@cspell/dict-git": "^3.0.4",
    "@cspell/dict-html": "^4.0.11",
    "@cspell/dict-html-symbol-entities": "^4.0.3",
    "@cspell/dict-markdown": "^2.0.10",
    "@cspell/dict-node": "^5.0.7",
    "@cspell/dict-npm": "^5.2.0",
    "@cspell/dict-shell": "^1.1.0",
    "@cspell/dict-typescript": "^3.2.1",
    "@cspell/eslint-plugin": "^8.18.1",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@eslint/markdown": "^6.3.0",
    "@holypack/core": "workspace:*",
    "@stylistic/eslint-plugin": "^4.2.0",
    "eslint": "^9.24.0",
    "eslint-plugin-perfectionist": "^4.11.0",
    "eslint-plugin-yml": "^1.17.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.30.1"
  },
  "devDependencies": {
    "@holypack/integration-babel": "workspace:*",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "default": "./src/index.ts"
    },
    "./*.d.ts": {
      "types": "./dist/types/*.d.ts",
      "default": "./src/*.ts"
    },
    "./*.cjs": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/*.mjs",
      "require": "./dist/cjs/*.cjs",
      "default": "./src/*.ts"
    },
    "./*.js": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/*.mjs",
      "require": "./dist/cjs/*.cjs",
      "default": "./src/*.ts"
    },
    "./*.mjs": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/*.mjs",
      "require": "./dist/cjs/*.cjs",
      "default": "./src/*.ts"
    },
    "./*.ts": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/*.mjs",
      "require": "./dist/cjs/*.cjs",
      "default": "./src/*.ts"
    },
    "./*/": {
      "types": "./dist/types/*/index.d.ts",
      "import": "./dist/esm/*/index.mjs",
      "require": "./dist/cjs/*/index.cjs",
      "default": "./src/*/index.ts"
    },
    "./*": {
      "types": "./dist/types/*",
      "import": "./dist/esm/*",
      "require": "./dist/cjs/*",
      "default": "./src/*"
    }
  },
  "files": [
    "./dist/",
    "./src/",
    "./package.json"
  ]
}
